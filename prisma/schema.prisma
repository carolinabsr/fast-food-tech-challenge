generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int    @id @default(autoincrement())
  cpf   String @unique
  name  String
  email String @unique
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  category    String
  price       Decimal
  description String

  images ProductImages[]

  combo          Combo[]
  ProductToCombo ProductToCombo[]
}

model ProductImages {
  id        Int     @id @default(autoincrement())
  productId Int
  url       String
  product   Product @relation(fields: [productId], references: [id])
}

model Combo {
  id Int @id @default(autoincrement())

  products       Product[]
  ProductToCombo ProductToCombo[]
}

model ProductToCombo {
  product    Product @relation(fields: [product_id], references: [id])
  product_id Int

  combo    Combo @relation(fields: [combo_id], references: [id])
  combo_id Int

  created_at DateTime @default(now())

  @@id([product_id, combo_id])
}
